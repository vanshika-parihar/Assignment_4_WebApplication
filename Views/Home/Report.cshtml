<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Report</title>
    <link rel="stylesheet" href="~/css/Report.css" type="text/css" />
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        * {
            box-sizing: border-box;
        }

        input[type=text], select, textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 6px;
            margin-bottom: 16px; 
            resize: vertical;
        }

        input[type=submit] {
            background-color: #000000;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type=submit]:hover {
                background-color: red;
            }

        .container {
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 20px;
        }
    </style>

</head>
<body>
    <nav class="navbar">
        <div class="navbar__container">
            <a href="/" id="navbar__logo">Crime statistics in U.S.</a>
            <div class="navbar__toggle" id="mobile-menu">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
            <ul class="navbar__menu">
                <li class="navbar__item">
                    <a class="navbar__links" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="navbar__item">
                    <a class="navbar__links" asp-controller="Home" asp-action="Explore">Explore Data</a>
                </li>
                <li class="navbar__item">
                    <a class="navbar__links" asp-controller="Home" asp-action="Report">Report an Incident</a>
                </li>
                <li class="navbar__item">
                    <a class="navbar__links" asp-controller="Home" asp-action="AboutUs">About Us</a>
                </li>
            </ul>
        </div>
    </nav>


    <img class="main" src="/images/file.PNG">

    <h1>Crime Incident Report Form</h1>
    <div class="container">
        <form method="post" asp-controller="Incident" asp-action="AddIncident">
            <label for="name">Your Name</label>
            <input type="text" id="name" name="name" placeholder="Your name..">

            <label for="phonenumber">Phone Number</label>
            <input type="text" id="phonenumber" name="phonenumber" placeholder="Phone Number..">

            <label for="city">City of Incident</label>
            <input type="text" id="city" name="city" placeholder="City name..">

            <label for="statename">State</label>
            <input type="text" id="statename" name="statename" placeholder="State name..">

            <label for="relation">Relation to Victim</label>
            <select id="relation" name="relation">
                <option value="Family">Family</option>
                <option value="Friend">Friend</option>
                <option value="Unknown">Unknown</option>
            </select>

            <label for="Description">Description</label>
            <textarea id="subject" name="subject" placeholder="Incident discription.." style="height:100px"></textarea>

            <input type="submit" value="Submit">
        </form>
    </div>

    <div style="width:100%; height:700px; overflow:auto;">
        <table class="table">
            <tr>

                <th>Name</th>
                <th>Phone number</th>
                <th>City</th>
                <th>Address</th>
                <th>State</th>
                <th>Relation</th>
                <th>Description</th>
            </tr>

            @foreach (var incident in Model.incidents)

                {
                    <tr>
                        <td>@incident.name</td>
                        <td>@incident.phone_number</td>
                        <td>@incident.city</td>
                        <td>@incident.address</td>
                        <td>@incident.state</td>
                        <td>@incident.relation</td>
                        <td>@incident.description</td>
                        <td>
                            @using (Html.BeginForm("DeleteReview", "Incident", FormMethod.Post))
                            {
                                <button value="@incident.id" name="id" type="submit" class="submit">Delete</button>}
                        </td>
                    </tr>
                }
        </table>
    </div>

        <script src="/js/main.js"></script>
</body>
</html>
